<% if flash[:user_error] %>
  <% flash[:user_error].each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>

<div class="container is-fluid">
  <div class="box">

    <%= form_for @user do |f| %>

      <div class="field">
        <div class="control">
          <%= f.label :name, class:"label" %>
          <%= f.text_field :name, autofocus: true,  class: "input", placeholder: "Enter you name"%>
        </div>
      </div>

      <div class="field">
        <div class="control">
            <%= f.label :password, class:"label" %> <%= f.password_field :password, autofocus: true, class: "input", placeholder: "Choose a password!"%>
        </div>
      </div>

      <div class="field">
        <div class="control">
            <%= f.label :age, class:"label" %> <%= f.number_field :age, class: "input" %>
        </div>
      </div>

      <div class="field">
        <div class="control">
            <%= f.label :bio, class:"label" %> <%= f.text_area :bio, class: "textarea" %>
        </div>
      </div>


      <%= f.submit%>

  </div>
</div>


<% end %>
