<h1>Create New User</h1>

<% if flash[:user_error] %>
    <% flash[:user_error].each do |msg| %>
        <p><%= msg %></p>
    <% end %>
<% end %>

<%= form_for @user do |f| %>
    <h4><%= f.label :name %>: <%= f.text_field :name,:autofocus => true %></h4>
    <h4><%= f.label :age %>: <%= f.number_field :age %></h4>
    <h4><%= f.label :bio %>: <%= f.text_area :bio %></h4>
    <%= f.submit %>
<% end %>