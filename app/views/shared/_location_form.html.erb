<div class="container is-fluid">
  <div class="box">

    <%= form_for @location do |f| %>

    <div class="field">
      <div class="control">

        <div class="field">
          <div class="control">
            <%= f.label :location, class="label" %>
            <%= f.text_field :location, class: "input"%>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.label :latitude, class="label" %>
            <%= f.text_field :latitude, class: "input"%>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.label :longitude, class="label" %>
            <%= f.text_field :longitude, class: "input"%>
          </div>
        </div>


    <% end %>

  </div>
</div>
